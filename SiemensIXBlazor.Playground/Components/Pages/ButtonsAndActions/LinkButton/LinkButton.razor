@page "/linkbutton"
@using SiemensIXBlazor.Playground.Shared.PlaygroundBase;

<PageTitle>Link Button</PageTitle>

<h1>Link Button</h1>

<PlaygroundBase Id="basic" ComponentType="Basic" TabId="link-button-basic" CodeContent="@ContentForBasic">
    <ComponentContent>
        <SiemensIXBlazor.Components.LinkButton Url="https://ix.siemens.io/">
            Link text
        </SiemensIXBlazor.Components.LinkButton>
    </ComponentContent>
</PlaygroundBase>

<PlaygroundBase Id="disabled" ComponentType="Disabled" TabId="link-button-disabled" CodeContent="@ContentForDisabled">
    <ComponentContent>
        <SiemensIXBlazor.Components.LinkButton Url="https://ix.siemens.io/" Disabled>
            Link text
        </SiemensIXBlazor.Components.LinkButton>
    </ComponentContent>
</PlaygroundBase>