@page "/upload"
@using SiemensIXBlazor.Components;
@using SiemensIXBlazor.Playground.Shared.CodeHighlighter
@using SiemensIXBlazor.Playground.Shared.PlaygroundBase

<PageTitle>Upload</PageTitle>

<h1>Upload</h1>

<div class="component-type" id="basic">

    <h2>Basic</h2>

    <Tabs Id="datedropdown-demo" SelectedChangeEvent="@(e => activeTab = e)">
        <ix-tab-item data-tab-id="0">
            <div class="tab-content">
                Usage
                <ix-icon name="document"></ix-icon>
            </div>
        </ix-tab-item>
        <ix-tab-item data-tab-id="1">
            <div class="tab-content">
                Code
                <ix-icon name="code"></ix-icon>
            </div>
        </ix-tab-item>
    </Tabs>

    <div data-tab-content="0" class="@(activeTab == 0 ? "show" : "hide")">
        <SiemensIXBlazor.Components.Upload Id="upload-basic">
        </SiemensIXBlazor.Components.Upload>
    </div>

    <div data-tab-content="1" class="@(activeTab == 1 ? "show" : "hide")">
        <CodeHiglighter CodeContent="@ContentForBasic" />
    </div>

    <PlaygroundBase Id="upload-component" TabId="upload-basic-type" ComponentType="Basic" CodeContent="@ContentForBasic">

        <ComponentContent>
            <SiemensIXBlazor.Components.Upload Id="ix-upload-basic"></SiemensIXBlazor.Components.Upload>
        </ComponentContent>
    </PlaygroundBase>

</div>
