@page "/categoryfilter"
@using SiemensIXBlazor.Components;
@using SiemensIXBlazor.Components.CategoryFilter;
@using SiemensIXBlazor.Playground.Shared.CodeHighlighter;

<PageTitle>Category Filter</PageTitle>

<h1>Category Filter</h1>

<div class="component-type" id="basic">
    <h2>Basic</h2>

    <Tabs Id="categoryfilter-basic" SelectedChangeEvent="@(e => activeTab = e)">
        <ix-tab-item data-tab-id="0">
            <div class="tab-content">
                Usage
                <ix-icon name="document"></ix-icon>
            </div>
        </ix-tab-item>
        <ix-tab-item data-tab-id="1">
            <div class="tab-content">
                Code
                <ix-icon name="code"></ix-icon>
            </div>
        </ix-tab-item>
    </Tabs>

    <div data-tab-content="0" class="@(activeTab == 0 ? "show" : "hide")">
        <SiemensIXBlazor.Components.CategoryFilter.CategoryFilter @ref="categoryFilter"
                                                                  Id="category-filter-basic-1"
                                                                  Placeholder="Filter by"
                                                                  RepeatCategories="false">
        </SiemensIXBlazor.Components.CategoryFilter.CategoryFilter>

    </div>

    <div data-tab-content="1" class="@(activeTab == 1 ? "show" : "hide")">

        <CodeHiglighter CodeContent="@Content">

        </CodeHiglighter>

    </div>
</div>




<div class="component-type" id="no-category">

    <h2>Without Category</h2>

    <Tabs Id="categoryfilter-no-category" SelectedChangeEvent="@(e => activeTabForWithoutState = e)">
        <ix-tab-item data-tab-id="0">
            <div class="tab-content">
                Usage
                <ix-icon name="document"></ix-icon>
            </div>
        </ix-tab-item>
        <ix-tab-item data-tab-id="1">
            <div class="tab-content">
                Code
                <ix-icon name="code"></ix-icon>
            </div>
        </ix-tab-item>
    </Tabs>

    <div data-tab-content="0" class="@(activeTabForWithoutState == 0 ? "show" : "hide")">
        <SiemensIXBlazor.Components.CategoryFilter.CategoryFilter @ref="categoryFilterForWithoutState"
                                                                  Id="category-filter-no-category-1"
                                                                  Placeholder="Filter by"
                                                                  RepeatCategories="false">
        </SiemensIXBlazor.Components.CategoryFilter.CategoryFilter>

    </div>

    <div data-tab-content="1" class="@(activeTab == 1 ? "show" : "hide")">

        <CodeHiglighter CodeContent="@Content">

        </CodeHiglighter>

    </div>
</div>


