@page "/checkbox"
@using SiemensIXBlazor.Components;

<PageTitle>Checkbox</PageTitle>

<h1>Checkbox</h1>


<div class="component-type" id="basic">
    <h2>Basic</h2>
    <Tabs Id="checkbox-demo" SelectedChangeEvent="@(e => activeTab = e)">
        <ix-tab-item data-tab-id="0">
            <div class="tab-content">
                Usage
                <ix-icon name="document"></ix-icon>
            </div>
        </ix-tab-item>
        <ix-tab-item data-tab-id="1">
            <div class="tab-content">
                Code
                <ix-icon name="code"></ix-icon>
            </div>
        </ix-tab-item>
    </Tabs>

    <div data-tab-content="0" class="@(activeTab == 0 ? "show" : "hide")">
        <p>Placeholder content for the Usage tab.</p>
    </div>

    <div data-tab-content="1" class="@(activeTab == 1 ? "show" : "hide")">
        <p>Placeholder content for the Code tab.</p>
    </div>
</div>
