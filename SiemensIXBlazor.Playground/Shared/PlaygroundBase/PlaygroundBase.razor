@using SiemensIXBlazor.Components;
@using SiemensIXBlazor.Playground.Shared.CodeHighlighter

<div class="component-type" id="@Id">
    <h2>@ComponentName</h2>

    <Tabs Id="@TabsId" SelectedChangeEvent="@(e => activeTab = e)">
        <ix-tab-item data-tab-id="0">
            <div class="tab-content">
                @UsageTabTitle
                <ix-icon name="@UsageTabIcon"></ix-icon>
            </div>
        </ix-tab-item>
        <ix-tab-item data-tab-id="1">
            <div class="tab-content">
                @CodeTabTitle
                <ix-icon name="@CodeTabIcon"></ix-icon>
            </div>
        </ix-tab-item>
    </Tabs>

    <div data-tab-content="0" class="@(activeTab == 0 ? "show" : "hide")">
        @ComponentContent
    </div>

    <div data-tab-content="1" class="@(activeTab == 1 ? "show" : "hide")">
        <CodeHiglighter CodeContent="@CodeContent"/>
    </div>
</div>
