@using Microsoft.JSInterop;
@using SiemensIXBlazor.Enums.Button;
@using SiemensIXBlazor.Helpers;
@inject IJSRuntime JSRuntime
@inherits IXBaseComponent

<ix-toggle-button @attributes="UserAttributes" class="@Class" style="@Style" id="@Id" disabled="@Disabled"
    aria-label-icon-button="@AriaLabelIconButton"
    icon="@Icon" icon-right="@IconRight" loading="@Loading" pressed="@Pressed"
    variant="@(EnumParser<ButtonVariant>.EnumToString(Variant, replaceUnderscores: true))">@ChildContent</ix-toggle-button>
