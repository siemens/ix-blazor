@using Microsoft.JSInterop;
@using SiemensIXBlazor.Enums.Chip;
@using SiemensIXBlazor.Helpers;
@namespace SiemensIXBlazor.Components
@inherits IXBaseComponent
@inject IJSRuntime JSRuntime

<ix-chip @attributes="UserAttributes" 
         id="@Id" 
         closable="@Closable" 
         outline="@Outline" 
         active="@Active"   
         background="@Background" 
         aria-label-close-button="@AriaLabelCloseButton"
         center-content="@CenterContent"
         chip-color="@ChipColor" 
         icon="@Icon" 
         variant="@(EnumParser<ChipVariant>.EnumToString(Variant))"
         style="@Style" 
         class="@Class" 
         tooltip-text="@TooltipText">
     @ChildContent
</ix-chip>
