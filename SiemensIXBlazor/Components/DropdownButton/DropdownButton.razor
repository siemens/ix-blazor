@namespace SiemensIXBlazor.Components
@using SiemensIXBlazor.Enums.Button;
@using SiemensIXBlazor.Enums.DropdownButton;
@using SiemensIXBlazor.Helpers;
@inherits IXBaseComponent

<ix-dropdown-button @attributes="UserAttributes" label="@Label"
    aria-label-dropdown-button="@AriaLabelDropdownButton"
    variant="@(EnumParser<ButtonVariant>.EnumToString(Variant, replaceUnderscores: true))"
    placement="@(Placement.HasValue ? EnumParser<DropdownButtonPlacement>.EnumToString(Placement.Value)?.Replace('_', '-') : "")"
    icon="@Icon" closeBehavior="@(EnumParser<DropdownButtonCloseBehavior>.EnumToString(CloseBehavior))"
    disabled="@Disabled" enable-top-layer="@EnableTopLayer" style="@Style" class="@Class">
    @ChildContent
</ix-dropdown-button>
