@using Microsoft.JSInterop;
@using SiemensIXBlazor.Components
@inherits IXBaseComponent
@inject IJSRuntime JSRuntime

<ix-time-input @attributes="UserAttributes"
               class="@Class"
               style="@Style"
               id = "@Id"
               name ="@Name"
               disabled = "@Disabled"
               enable-top-layer = "@EnableTopLayer"
               readonly ="@Readonly"
               label = "@Label"
               info-text="@InfoText"
               warning-text="@WarningText"
               valid-text="@ValidText"
               invalid-text="@InvalidText"
               helper-text ="@HelperText">

    @if (StartSlot != null)
    {
        <div slot="start">
            @StartSlot
        </div>
    }

    @if (EndSlot != null)
    {
        <div slot="end">
            @EndSlot
        </div>
    }
</ix-time-input>
