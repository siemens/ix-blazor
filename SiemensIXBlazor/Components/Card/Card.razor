         style=@Style
         aria-label-card="@AriaLabelCard"
         aria-label-icon="@AriaLabelIcon"
         variant=@Variant
         selected=@Selected>
    <ix-card-content>
        @ChildContent
    </ix-card-content>
</ix-card>